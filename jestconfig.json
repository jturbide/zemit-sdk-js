{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "^jose$": "jose"
  }
}
